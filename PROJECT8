<head>

</head>

<body>
    <center>
        <h3>Unit Conversion Program</h3>
        <input id="inputvalue" type="text" />
        <Button onclick="toCelsiusProgram(document.getElementById
        ('inputvalue').value )">toCelsius</Button>
        <Button onclick="toFahrenheitProgram(document.getElementById
        ('inputvalue').value)">toFahrenheit</Button>
        <div id="toCelsius"></div>
        <div id="toFahrenheit"></div>
        <script ">
function toCelsius(Fahrenheit) {
    let value = (Fahrenheit - 32) * 5 / 9;
    return value.toFixed(2) + " Celsius";
}

function display(elementId, value) {
    document.getElementById(elementId).innerHTML = "<b>"+value+"</b>"
}

function toFahrenheit(Celsius) {
    let value = (Celsius * 9 / 5) + 32;
    return value.toFixed(2) + " Fahrenheit";
}
function toCelsiusProgram(value)
{
    alert(toCelsius(value))
 
}
function toFahrenheitProgram(value)
{
    alert(toFahrenheit(value))
  
}


</script>
    </center>
</body>
